<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Android studio bug, needed for preview -->
        <item name="cardViewStyle" tools:ignore="PrivateResource">@style/CardView</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">2sp</item>
    </style>

    <style name="AppTheme.ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorToolbarPrimary</item>
    </style>

    <style name="AppTheme.ToolbarStyle.TitleTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorToolbarPrimary</item>
    </style>

    <style name="AppTheme.ToolbarStyle.SubtitleTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorToolbarSecondary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
